mixin nav(basePath, cdnBasePath)
    div(class='container-fluid')
        div(class='navbar-header')
            button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar-collapse", aria-expanded="false")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a(class='navbar-brand' href="#{basePath}/zh/index.html")
                img(class="navbar-logo", src="#{cdnBasePath}/zh/images/logo.png", alt="echarts logo")
        div(class="collapse navbar-collapse", id="navbar-collapse")
            ul(class='nav navbar-nav navbar-left')
                li#nav-index
                    a(href='#{basePath}/zh/index.html') 首页
                li#nav-doc.dropdown
                    a(href='#', class="dropdown-toggle", data-toggle="dropdown") 文档
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href="#{basePath}/zh/feature.html") 特性
                        li
                            a(href="#{basePath}/zh/tutorial.html") 教程
                        li
                            a(href="#{basePath}/zh/api.html") API
                        li
                            a(href="#{basePath}/zh/cheat-sheet.html") 术语速查手册
                                span.new NEW
                        li
                            a(href="#{basePath}/zh/option.html") 配置项手册
                        li
                            a(href="#{basePath}/zh/option-gl.html") GL 配置项手册
                        li
                            a(href="#{basePath}/zh/changelog.html") 版本记录
                li#nav-download.dropdown
                    a(href='#', class="dropdown-toggle", data-toggle="dropdown") 下载
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href="#{basePath}/zh/download.html") 下载
                        li
                            a(href="#{basePath}/zh/download-theme.html") 主题下载
                        li
                            a(href="#{basePath}/zh/download-extension.html") 扩展下载
                li#nav-examples
                    a(href='#', class="dropdown-toggle", data-toggle="dropdown") 实例
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href='#{basePath}/examples/zh/index.html') 官方实例
                        li
                            a(href='#{basePath}/examples/zh/index.html#chart-type-globe') GL 实例
                li#nav-community
                    a(href='#', class="dropdown-toggle", data-toggle="dropdown") 社区
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href="https://gallery.echartsjs.com") Gallery
                        li
                            a(href="#{blogPath}") 博客
                li#nav-tool
                    a(href='#', class="dropdown-toggle", data-toggle="dropdown") 工具
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href="#{basePath}/zh/spreadsheet.html") 表格工具
                        //- li
                        //-     a(href="https://ecomfe.github.io/echarts-map-tool/") 地图数据在线工具
                        li
                            a(href="https://www.echartsjs.com/theme-builder/") 主题构建工具
                li#nav-contribute
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        | 贡献
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href='https://github.com/apache/incubator-echarts', target='_blank') 源码（GitHub）
                        li
                            a(href='https://github.com/apache/incubator-echarts/issues', target='_blank') Issues
                        li
                            a(href='#{basePath}/zh/coding-standard.html') 代码规范
                li#nav-about
                    a(href='#', class="dropdown-toggle", data-toggle="dropdown") 关于
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href='#{basePath}/zh/committers.html') 贡献者列表
                        li
                            a(href='https://www.apache.org/licenses/') 版权声明
                        li
                            a(href='#{basePath}/zh/maillist.html') 邮件列表
                        li
                            a(href='#{basePath}/zh/dependencies.html') 依赖项
                        li
                            a(href='#{basePath}/zh/faq.html') 常见问题

            ul(class='nav navbar-nav navbar-right')
                li#nav-github
                    a(href="https://github.com/ecomfe/echarts" target="_blank")
                        img(src="#{cdnBasePath}/zh/images/github.png", width="18")
                li#nav-homeen
                    a(href='javascript:;', onclick="changeLang('en')") EN

